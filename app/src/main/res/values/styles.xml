<resources>

    <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="menu_item_padding">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="TextColorStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dbpjTextSizeStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- pop 菜单2 -->
    <style name="pop_menu2">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- pop 菜单 -->
    <style name="pop_menu">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

</resources>
