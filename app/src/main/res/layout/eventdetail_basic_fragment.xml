<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_evententry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/dj_btb"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_sjgzbtn_bg"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="登记" />

                        <ImageView
                            android:id="@+id/dj_img"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/jtfour"/>

                        <Button
                            android:id="@+id/sl_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_sjgzbtn_bg"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="受理" />

                        <ImageView
                            android:id="@+id/sl_img"
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp"
                            android:background="@mipmap/jtfour"/>


                        <Button
                            android:id="@+id/fl_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_sjgzbtn_bg"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="分流" />


                    </LinearLayout>

                <ImageView
                    android:id="@+id/fl_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="45dp"
                    android:background="@mipmap/jttwo"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/gd_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_sjgzbtn_bg"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="归档" />
                        <ImageView
                            android:id="@+id/hfhc_img"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/jtsix"/>
                        <Button
                            android:id="@+id/hfhc_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_sjgzbtn_bg"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="回访核查" />

                        <ImageView
                            android:id="@+id/cl_img"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/jtsix"/>

                        <Button
                            android:id="@+id/cl_btn"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border_sjgzbtn_bg"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="处理" />

                    </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thing_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/thing_name_edt"
                        style="@style/TextColorStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/linearlayout_one" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happen_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/happen_time_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        style="@style/TextColorStyle"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happen_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/happen_address_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:padding="5dp"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView"
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/petition_groups" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/petition_groups_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:padding="5dp"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:id="@+id/field_departmen_layout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_departmen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/field_departmen_edt"
                        style="@style/TextColorStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/field_departmen_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/down"
                        android:visibility="invisible" />


                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">`

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pattern_manifestation" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/pattern_manifestation_spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:id="@+id/xcts_linear"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">`

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_morphology" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/field_morphology_spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/scope_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/scope_text_spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:id="@+id/fields_involved_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fields_involved" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <EditText
                        android:id="@+id/fields_involved_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/fields_involved_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/down"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/foreign_related" />

                <EditText
                    android:id="@+id/foreign_related_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    style="@style/TextColorStyle"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/involved_xinjiang" />

                <EditText
                    android:id="@+id/involved_xinjiang_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    style="@style/TextColorStyle"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/involve_public_opinion" />

                <EditText
                    android:id="@+id/involve_public_opinion_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    style="@style/TextColorStyle"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/public_security_disposal" />

                <EditText
                    android:id="@+id/public_security_disposal_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    style="@style/TextColorStyle"
                    android:enabled="false"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/belong_street" />

                <EditText
                    android:id="@+id/belong_street_edt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    android:padding="5dp"
                    style="@style/TextColorStyle"
                    android:text="华强北街道"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/belong_community" />

                <EditText
                    android:id="@+id/belong_community_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    style="@style/TextColorStyle"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_appeals" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/main_appeals_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        style="@style/TextColorStyle"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_summary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/event_summary_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        style="@style/TextColorStyle"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leadership_instructions" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/leadership_instructions_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:enabled="false"
                        android:padding="5dp"
                        style="@style/TextColorStyle"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/linearlayout_one" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>