<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fj_relativieLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/library_icon"
                android:gravity="center_vertical"
                android:text="附件信息列表 >>"
                android:textSize="15dp" />

            <Button
                android:id="@+id/event_relevance"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/event_log"
                android:background="@drawable/border_bccgbutton_bg"
                android:drawableStart="@mipmap/events"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="关联事件"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/event_log"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_bccgbutton_bg"
                android:drawableStart="@mipmap/log"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="办理日志"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </RelativeLayout>

        <View
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:background="#DDDDDD"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ListView
                android:id="@+id/image_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>