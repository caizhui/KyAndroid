<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/linearlayout_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:background="@mipmap/linear"
                android:orientation="vertical">

                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/event_linearlayout"
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bmpj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/wdsj" />

                        <TextView
                            android:id="@+id/bmpj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="部门评价"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/gwpj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz" />

                        <TextView
                            android:id="@+id/gwpj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="岗位评价"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/jgpj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/message" />

                        <TextView
                            android:id="@+id/jgpj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="机构评价"
                            android:padding="3dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->


                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:paddingTop="5dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/jdpj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/jdpj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/zsk_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/zsk_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/flfg_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/flfg_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->

                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:paddingTop="5dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ya_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/ya_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/cgx_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/cgx_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/gzjb_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/gzjb_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->


                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.01"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sjtj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/sjtj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:padding="3dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>