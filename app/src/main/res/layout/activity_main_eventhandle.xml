<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/linearlayout_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:background="@mipmap/linear"
                android:orientation="vertical">

                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/task_linearlayout"
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/task_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/wdrw" />

                        <TextView
                            android:id="@+id/task_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="我的任务"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/supervision_linearlayout"
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/supervision_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/dcdb" />

                        <TextView
                            android:id="@+id/supervision_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="督查督办"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/message_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/message" />

                        <TextView
                            android:id="@+id/message_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="消息"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->


                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/jdpj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/jdpj" />

                        <TextView
                            android:id="@+id/jdpj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="监督评价"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/zsk_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/zsk" />

                        <TextView
                            android:id="@+id/zsk_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="知识库"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/flfg_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/flfg" />

                        <TextView
                            android:id="@+id/flfg_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="法律法规"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->

                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ya_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/ya" />

                        <TextView
                            android:id="@+id/ya_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="预案"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/gzjb_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/gzjb" />

                        <TextView
                            android:id="@+id/gzjb_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="工作简报"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sjtj_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjtj" />

                        <TextView
                            android:id="@+id/sjtj_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="事件统计"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->


                <!-- start group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sjgz_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/sjgz" />

                        <TextView
                            android:id="@+id/sjgz_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="事件跟踪"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/menu_item_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- end group -->

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bottom_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:padding="3dp"
                android:textColor="@color/red_btn_bg_color" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>